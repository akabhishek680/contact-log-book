<html>
    <head>
        <title>My contact log</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/contact-list-page-styel.css">
    </head>

    <body>
        <img src="/image/logo.png" width="100">
        <h1 class="underline-text inline-block-display">Contact Log Book</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">More Option</th>
                </tr>
            </thead>
            <tbody>
                
                <% for(let contact of contact_list) { %>  
                    <tr>
                        <td><%= contact.name %></td>
                        <td><%= contact.phoneNo %></td>
                        <td><a class="red-text delete-btn" href="/delete-contact/?id=<%=contact._id%>">DELETE</a></td>
                    </tr>
                <% } %>
            </tbody>
          </table>

        <h3 class="mt-5 mb-3 display-7">Enter New Contact</h3>
        <form action="/save-contact" method="POST">
            <div class="row">
                <input class="col-2 form-ml" type="text" name="name" placeholder="Enter Name" required>  
                <input class="col-2 form-ml" type="text" name="phoneNo" placeholder="Enter Phone No" required>
                <button class="col-1 form-ml save-btn" type="submit">SAVE</button>
            </div>
        </form>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>